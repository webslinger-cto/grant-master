# Database
DATABASE_URL=postgresql://grantops:grantops_dev_password@localhost:5432/grantops_dev

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Resend
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@webslinger.ai

# App
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Anthropic Claude API (for AI chatbot)
ANTHROPIC_API_KEY=your-anthropic-api-key

# AI Chatbot Configuration
AI_MAX_MESSAGES_PER_USER_PER_DAY=100
AI_MAX_TOKENS_PER_REQUEST=4000
AI_DEFAULT_MODEL=claude-3-5-sonnet-20241022
AI_DEFAULT_TEMPERATURE=0.7
AI_STREAM_RESPONSES=true
